@model gadget_freak_backend.Models.BlogPost

@{
    ViewBag.Title = "Edit";
    ViewBag.Selected = "Blog";
}

@using (Html.BeginForm("Edit", "Blog", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="row">
        <div class="col-md-10 col-md-offset-1">
            <div class="panel panel-login">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-12">
                            <a href="" class="active" id="login-form-link">Edit</a>
                        </div>
                    </div>
                    <hr>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-12">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            @Html.HiddenFor(model => model.Id)
                            @Html.HiddenFor(model => model.UserId)
                            @Html.HiddenFor(model => model.CreatedAt)
                            @Html.HiddenFor(model => model.Image)

                            <div class="form-group">
                                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                                @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Title" })
                            </div>

                            <div class="form-group">
                                @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
                                @Html.TextAreaFor(m => m.Content, new { @class = "form-control", placeholder = "Content", rows = "5", style = "resize: vertical" })
                            </div>

                            <div class="form-group">
                                <strong>Category:</strong>
                                @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger" })
                                @Html.DropDownList("CategoryId", null, htmlAttributes: new { @class = "form-control" })
                            </div>

                            <div class="form-group">
                                <strong>Image:</strong>
                                @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                                <input type='file' id="Image" name="upload" />
                            </div>

                            <div class="form-group">
                                <div class="row">
                                    <div class="col-sm-8 col-sm-offset-2">
                                        <input type="submit" tabindex="8" class="form-control btn btn-login" value="Update">
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="text-center">
                                            <a href="@Url.Action("Index", "Blog")" tabindex="5" class="forgot-password">Back to blog</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
